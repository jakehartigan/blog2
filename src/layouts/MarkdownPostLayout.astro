---
import BaseLayout from '../layouts/BaseLayout.astro';
const { frontmatter } = Astro.props;

---
<BaseLayout pageTitle={frontmatter.title}>

<p>Written by {frontmatter.author}</p>
<h2>{frontmatter.headline}</h2>
<div class="tags">
  {frontmatter.tags.map((tag) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
  ))}
</div>
<p>Published on {frontmatter.pubDate.slice(0,10)}</p>

<div style={{backgroundColor: 'purple', padding: "10px",  width: "300px", height:"90" }}>
  <img src={frontmatter.image.url} alt={frontmatter.image.al} width="100%" height="100%"/>
</div>
<slot />
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>